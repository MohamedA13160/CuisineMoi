{% extends "base.html.twig" %}


{% block title %}
	Ajouter une recettes
{% endblock %}



{% block body %}

	<div class="container-fluid gris mt-4">
		<h1 class="jaune">Ajouter une recette</h1>
		

		<div class="row"> 
	

	
<div class="col-lg-6 decaler">


				<div class="title_cat">

					Votre recette
				</div>
{{form_start(form , {"attr" : {"class" : "needs-validation"}}) }}

			
		

					{{form_row(form.title)}}
	

				
				{{form_row(form.category)}}
				{{form_row(form.description)}}
			</div>
<div class="col-lg-6 decaler dec">


	<div>

		{{ form_row(form.imageFile)}}
		{{ form_label(form.imageFile, ' Télécharger', {"label_attr" : {"class" : "label fas fa-file-download"} } ) }}


	</div>
</div>

			

	<div class="col-lg-6 decaler">


	<div class="title_cat"> Ingrédient </div>
		{{form_row(form.ingredient)}}
	</div>
	<div class="col-lg-6 decaler">


		<div class="title_cat">

			Information
		</div>

	<div class="col-lg-6 decaler">

		{{form_row(form.tps_cuisson)}}
			
		</div>
	<div class="col-lg-6 decaler">


		{{form_row(form.personne)}}
	</div>
	<div class="col-lg-6 decaler">

		{{form_row(form.tps_preparation)}}
	</div>

	<div class="col-lg-12 decaler">


		{{form_row(form.options)}}
	</div>

</div>

<div class="col-lg-6 decaler">



				<div class="title_cat">

					Préparation
				</div>
				

				{{form_row(form.preparation)}}
			
</div>

<div class="col-lg-12 decaler">



				

					<button class="btn btn-recette">Ajouter ma recette</button>
				</div>
</div>

				
			{{form_end(form)}}
		</div>
	</div>

{% endblock %}
