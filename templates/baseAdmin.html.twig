<!-- Responsive CSS -->
<link rel="stylesheet" href="{{asset('asset/css/responsive.css')}}">

<!--load all styles -->
		{% block stylesheets %}{% endblock %}
		</head>
	</html>
	{% if is_granted('ROLE_ADMIN') %}

		<div class="nav-btn">Menu</div>
		
			<div class="list-group" id="list-tab" role="tablist">
				<div class="sidebar">
					<nav>
						<a href="{{path('home')}} ">Cuisine<span>Moi</span>

						</a>
						<ul>
							<li class="{% if current_menu is defined and relative_path("admin.index")%}active{% endif %}">
								<a href="{{path('admin.index')}}">Tableau de bord</a>
							</li>
							<li class="{% if current_menu_users is defined and relative_path("admin.users.index") %}active{% endif %}">
								<a href="{{path('admin.users.index')}}">Utilisateur</a>

							</li>

							<li class="{% if current_menu_recettes is defined and relative_path("admin.recette.index") %}active{% endif %}">
								<a href="{{path('admin.recette.index')}}">Recette</a>
							</li>
							
							<li class="{% if current_menu_categoried is defined and relative_path("admin.categorie.index") %}active{% endif %}">
								<a href="{{path('admin.categorie.index')}}">Categories</a>
							</li>
						<li class="{% if current_menu_categoried is defined and relative_path("admin_commentaire_index") %}active{% endif %}">
						<a href="{{path('admin_commentaire_index')}}">Commentaires</a>
					</li>



							<li class="li deco">
								<a href="{{ path('logout')}}">Se deconnecter</a>
							</li>

						</ul>
					{% endif %}
				</nav>


			</div>
		
	</div>


	
	


{% block body %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="{{ asset('asset/js/script.js')}}"></script>

{% block javascripts %}{% endblock %}
</body></html>
